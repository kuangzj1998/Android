<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.user.calculator2.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/textView"
            android:layout_width="294dp"
            android:layout_height="80dp"
            android:background="#C3C3C3"
            android:text="0"
            android:textSize="40sp"
            android:gravity="center|end"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <Button
            android:id="@+id/CE"
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:text="CE"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/C"
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:text="C"
            android:textSize="25sp"/>
        <Button
            android:id="@+id/Del"
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:text="←"
            android:textSize="25sp"/>
        <Button
            android:id="@+id/Div"
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:text="÷"
            android:textSize="25sp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/Seven"
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:text="7"
            android:textSize="25sp"/>
        <Button
            android:id="@+id/Eight"
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:text="8"
            android:textSize="25sp"/>
        <Button
            android:id="@+id/Nine"
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:text="9"
            android:textSize="25sp"/>
        <Button
            android:id="@+id/Multiply"
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:text="×"
            android:textSize="25sp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/Four"
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:text="4"
            android:textSize="25sp"/>
        <Button
            android:id="@+id/Five"
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:text="5"
            android:textSize="25sp"/>
        <Button
            android:id="@+id/Six"
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:text="6"
            android:textSize="25sp"/>
        <Button
            android:id="@+id/Sub"
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:text="－"
            android:textSize="25sp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/One"
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:text="1"
            android:textSize="25sp"/>
        <Button
            android:id="@+id/Two"
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:text="2"
            android:textSize="25sp"/>
        <Button
            android:id="@+id/Three"
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:text="3"
            android:textSize="25sp"/>
        <Button
            android:id="@+id/Add"
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:text="＋"
            android:textSize="25sp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/PAN"
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:text="±"
            android:textSize="25sp"/>
        <Button
            android:id="@+id/Zero"
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:text="0"
            android:textSize="25sp"/>
        <Button
            android:id="@+id/Dot"
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:text="."
            android:textSize="25sp"/>
        <Button
            android:id="@+id/Equal"
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:text="="
            android:textSize="25sp"/>
    </LinearLayout>


</LinearLayout>